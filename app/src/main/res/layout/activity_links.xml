<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink"
    tools:context=".Links">

    <TextView
        android:id="@+id/tvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="E-KHOKHA"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textColor="#ffffff"/>

      <ImageView
          android:id="@+id/ivfb"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginTop="60dp"
          android:layout_marginLeft="40dp"
          android:src="@drawable/fb"
          android:layout_below="@+id/tvl"
          />
    <ImageView
        android:id="@+id/ivtw"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/twiter"
        android:layout_below="@+id/tvl"
        android:layout_alignLeft="@+id/ivfb"
        />
    <ImageView
        android:id="@+id/ivgm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/gmail"
        android:layout_below="@+id/tvl"
        android:layout_alignLeft="@+id/ivtw"
        />

    <View
        android:id="@+id/v4567"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#3fff"
        android:backgroundTint="@color/white"
        android:layout_below="@+id/ivgm"
        android:layout_marginTop="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v4567"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:hint="Developed By HA" />


</RelativeLayout>